<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('head') %> <!-- Include the head partial -->
  <title><%= details.title %></title> <!-- Use details.title here -->

</head>
<body>
  <%- include('header') %> <!-- Include the header partial -->
  
  <div class="container-fluid">
    <div class="row">
     
      <!-- Sidebar and Hamburger Menu -->
      <nav class="col-md-3 col-lg-3 bg-light p-4">
        <!-- Hamburger Button for Mobile -->
        <button class="btn btn-primary w-100 d-md-none mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
          <i class="bi bi-list"></i> Menu
        </button>
        
        <!-- Collapsible Sidebar Menu -->
        <div class="collapse d-md-block" id="sidebarMenu">
          <h4>Technology Skills</h4>
          <ul class="list-group">
            <% for (const [group, routes] of Object.entries(groupedRoutes)) { %>
              <li class="list-group-item mt-3">
                <!-- Button with icon to trigger collapse -->
                <button
                  class="btn btn-secondary w-100 d-flex justify-content-between align-items-center"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapse<%= group.replace(/\s+/g, '') %>"
                  aria-expanded="false"
                  aria-controls="collapse<%= group.replace(/\s+/g, '') %>">
                  <span>
                    <i class="bi bi-folder-fill me-2"></i> <!-- Bootstrap icon -->
                    <%= group %>
                  </span>
                  <i class="bi bi-chevron-down"></i> <!-- Chevron icon -->
                </button>
                
                <!-- Collapsible Group Links -->
                <div class="collapse mt-2" id="collapse<%= group.replace(/\s+/g, '') %>">
                  <ul class="list-unstyled ps-3">
                    <% routes.forEach((route) => { %>
                      <li>
                        <a href="<%= route.endpoint %>" class="text-decoration-none d-flex align-items-center">
                          <i class="bi bi-chevron-right me-2"></i> <!-- Item icon -->
                          <%= route.title %>
                        </a>
                      </li>
                    <% }); %>
                  </ul>
                </div>
              </li>
            <% } %>
          </ul>
        </div>
      </nav>

      <!-- Right Content Area -->
      <div class="col-md-9 col-lg-9 p-4">
        <div class="container">
          <h1 class="text-success"><%= details.title %> </h1>
          <%- content %> <!-- Dynamic content for the selected skill -->
        </div>
      </div>
    </div>
  </div>

  <%- include('footer') %> <!-- Include the footer partial -->

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
