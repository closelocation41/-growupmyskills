<!-- App favicon -->
<link rel="shortcut icon" href="assets/images/favicon.ico">

<!-- Vendor css -->
<link href="assets/css/vendor.min.css" rel="stylesheet" type="text/css" />

<!-- App css -->
<link href="assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

<!-- Icons css -->
<link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />

<!-- Theme Config Js -->
<script src="assets/js/config.js"></script>

<style>
  /* Universal Reset for margins/padding */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Body and container setup */
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f4f4f4;
    color: #333;
    line-height: 1.6;
  }

  .container {
    width: 90%;
    margin: 0 auto;
    max-width: 1200px;
  }

  /* Header Styles for Smaller Font Sizes */

  /* General Header Styling */
  h1,
  h2,
  h3,
  h4 {
    font-family: 'Roboto', sans-serif;
    font-weight: 600;
    color: #333;
    line-height: 1.4;
    margin-bottom: 20px;
  }

  /* h1 - Small but still the largest */
  h1 {
    font-size: 2rem;
    /* 32px */
    letter-spacing: -0.5px;
    margin-top: 30px;
    color: #2c3e50;
  }

  /* h2 - Smaller, but still a significant subheading */
  h2 {
    font-size: 1.75rem;
    /* 28px */
    margin-bottom: 15px;
    color: #34495e;
  }

  /* h3 - Moderate size for subheadings */
  h3 {
    font-size: 1.5rem;
    /* 24px */
    margin-bottom: 12px;
    color: #5f6368;
  }

  /* h4 - Smaller, for section titles */
  h4 {
    font-size: 1.25rem;
    /* 20px */
    margin-bottom: 10px;
    color: #7f8c8d;
  }

  /* Optional: Add bottom border to h1, h2, and h3 for emphasis */
  h1,
  h2,
  h3 {
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 8px;
  }

  /* Responsive Design - Adjust heading sizes on smaller screens */
  @media (max-width: 768px) {
    h1 {
      font-size: 1.75rem;
      /* 28px */
    }

    h2 {
      font-size: 1.5rem;
      /* 24px */
    }

    h3 {
      font-size: 1.25rem;
      /* 20px */
    }

    h4 {
      font-size: 1rem;
      /* 16px */
    }
  }


  pre {
    background-color: #2e3b4e;
    color: #dcdcdc;
    padding: 20px;
    border-radius: 5px;
    font-family: 'Courier New', monospace;
    overflow-x: auto;
    position: relative;
    /* Make space for the button */
  }

  .copy-button {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #3498db;
    color: #fff;
    border: none;
    padding: 5px 10px;
    font-size: 0.9rem;
    cursor: pointer;
    border-radius: 5px;
    z-index: 10;
    /* Ensure it stays on top */
  }

  .copy-button:hover {
    background-color: #2980b9;
  }

  /* Copy button style */
  .copy-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 5px 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .copy-btn:hover {
    background-color: #0056b3;
  }


  /* Sidebar styles */
  .bg-light {
    border-right: 1px solid #ddd;
    background-color: #f8f9fa !important;
  }

  /* Sidebar title */
  h4 {
    font-weight: bold;
    color: #333;
    margin-bottom: 1.5rem;
  }

  /* List group item styling */
  .list-group-item {
    border: none;
    padding: 0;
    background: none;
  }

  /* Button styles for collapsible groups */
  .list-group-item .btn {
    background-color: #6c757d;
    color: #fff;
    padding: 0.6rem 1rem;
    font-size: 1rem;
    text-align: left;
    transition: background-color 0.3s ease;
  }

  .list-group-item .btn:hover {
    background-color: #495057;
  }

  .list-group-item .btn i {
    transition: transform 0.3s ease;
  }

  .list-group-item .btn[aria-expanded="true"] .bi-chevron-down {
    transform: rotate(180deg);
    /* Rotate icon on open */
  }

  /* Links inside collapsible sections */
  .collapse ul li a {
    font-size: 0.9rem;
    color: #007bff;
    padding: 0.4rem 0;
    display: flex;
    align-items: center;
    transition: padding-left 0.3s ease;
  }

  .collapse ul li a:hover {
    text-decoration: none;
    color: #0056b3;
    padding-left: 0.5rem;
  }

  /* Icons for individual links */
  .collapse ul li a i {
    color: #6c757d;
  }

  
</style>