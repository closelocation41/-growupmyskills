
<script>
    // Function to create a copy button and append it next to each <pre> tag
    document.querySelectorAll('pre').forEach((preTag) => {
      // Create a copy button for each <pre> block
      const copyButton = document.createElement('button');
      copyButton.classList.add('copy-button');
      copyButton.innerText = 'Copy';

      // Add the button inside the <pre> tag
      preTag.appendChild(copyButton);

      // Add click event listener to the copy button
      copyButton.addEventListener('click', () => {
        const code = preTag.querySelector('code');  // Get the <code> inside <pre>

        // Use the Clipboard API to copy text
        navigator.clipboard.writeText(code.textContent).then(() => {
                 // Change button text to "Copied!"
          copyButton.innerHTML = 'Copied!';
          copyButton.style.color ="green"
          copyButton.style.background ="white"
        }).catch((err) => {
         copyButton.style.color ="red"
          copyButton.style.background ="white"
          copyButton.innerHTML = 'Copied Error';
        });
      });
    });
  </script>
  <!-- Bootstrap JS (Optional for interactivity) -->
